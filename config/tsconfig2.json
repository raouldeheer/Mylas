{
    "compilerOptions": {
      "incremental": true,                  
      "target": "ES2017",                         
      "module": "commonjs",                   
      "declaration": true,           
      "outDir": "../build/",                        
      "rootDir": "../ts/",                      
      "composite": false,                  
      "tsBuildInfoFile": "./tsconfig2.tsbuildinfo",            
      "removeComments": false,                
      "noEmit": false,                       
      "importHelpers": false,         
      "strict": true,               
      "noUnusedLocals": true,                
      "noUnusedParameters": true,            
      "noImplicitReturns": true,             
      "noFallthroughCasesInSwitch": true,    
      "noUncheckedIndexedAccess": true,  
      "esModuleInterop": true,           
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "emitDeclarationOnly": true  
    },
    "exclude": [
      "../node_modules",
      "../tests",
      "../build"
    ],
    "include": [
      "../ts/**/*"
    ]
  }
  